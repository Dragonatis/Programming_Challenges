        <Button Name="CalculateButton" Content="Calculate&#10;   Love" FontSize="20" HorizontalAlignment="Left" Margin="350,353,0,0" VerticalAlignment="Top" Width="100" Height="57" Click="CalculateButton_Click"/>
        <Image Name="HeartImage" HorizontalAlignment="Center" Height="338" Margin="10,10,0,0" VerticalAlignment="Top" Width="772"/>
        <TextBlock Name="Percentage" FontSize="70" Foreground="DarkRed" TextAlignment="Center" HorizontalAlignment="Left" Margin="229,138,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="334" Height="90"/>

    </Grid>
</Window>
